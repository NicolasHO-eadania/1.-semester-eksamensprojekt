<Window x:Class="Fitness_projekt.MedlemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fitness_projekt"
        mc:Ignorable="d"
        Title="MedlemWindow" Height="450" Width="800">
    <Viewbox x:Name="MedlemViewBox" Stretch="Uniform">
        <Grid Height="434" Width="800">
            <Rectangle HorizontalAlignment="Left" Height="380" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="385" Fill="#FFE5E5E5"/>
            <Rectangle HorizontalAlignment="Left" Height="380" Margin="405,0,0,10" VerticalAlignment="Bottom" Width="385" Fill="#FFE5E5E5"/>
            <ListBox x:Name="MineAktiviteterListBox" HorizontalAlignment="Left" Height="150" Margin="15,73,0,0" VerticalAlignment="Top" Width="375" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="14" SelectionChanged="MineAktiviteterListBox_SelectionChanged"/>
            <TextBox x:Name="AktivitetTitelTextBox" HorizontalAlignment="Left" Height="25" Margin="410,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="295" FontSize="14" IsHitTestVisible="False"/>
            <TextBox x:Name="AktivitetDatoTextBox" HorizontalAlignment="Left" Height="25" Margin="705,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" FontSize="14" TextAlignment="Center" IsHitTestVisible="False"/>
            <TextBox x:Name="AktivitetBeskrivelseTextBox" HorizontalAlignment="Left" Height="125" Margin="410,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="375" FontSize="14" IsHitTestVisible="False"/>
            <ListBox x:Name="AktivitetDeltagereListBox" HorizontalAlignment="Left" Height="150" Margin="410,239,0,0" VerticalAlignment="Top" Width="375" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="14"/>
            <Button x:Name="DeltagButton" Content="Deltag" HorizontalAlignment="Left" Height="25" Margin="410,394,0,0" VerticalAlignment="Top" Width="188" FontSize="14" Click="DeltagButton_Click" IsHitTestVisibleChanged="DeltagButton_IsHitTestVisibleChanged" IsHitTestVisible="False"/>
            <TextBlock HorizontalAlignment="Left" Height="24" Margin="15,49,0,0" TextWrapping="Wrap" Text="Mine aktiviteter" VerticalAlignment="Top" Width="375" TextAlignment="Center" FontSize="16"/>
            <ListBox x:Name="AlleAktiviteterListBox" HorizontalAlignment="Left" Height="150" Margin="15,269,0,0" VerticalAlignment="Top" Width="375" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="14" SelectionChanged="AlleAktiviteterListBox_SelectionChanged"/>
            <TextBlock HorizontalAlignment="Left" Height="25" Margin="15,244,0,0" TextWrapping="Wrap" Text="Tilgængelige aktiviteter" VerticalAlignment="Top" Width="375" FontSize="16" TextAlignment="Center"/>
            <Button x:Name="ForladButton" Content="Forlad" HorizontalAlignment="Left" Height="25" Margin="598,394,0,0" VerticalAlignment="Top" Width="187" FontSize="14" Click="ForladButton_Click" IsHitTestVisibleChanged="ForladButton_IsHitTestVisibleChanged" IsHitTestVisible="False"/>
            <TextBlock x:Name="AktivitetDeltagereTextBlock" HorizontalAlignment="Left" Height="22" Margin="678,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="107" FontSize="14" TextAlignment="Right"/>
            <TextBlock HorizontalAlignment="Left" Height="22" Margin="410,217,0,0" TextWrapping="Wrap" Text="Deltagere" VerticalAlignment="Top" Width="151" FontSize="14"/>
            <Rectangle HorizontalAlignment="Center" Height="25" Margin="0,10,0,0" VerticalAlignment="Top" Width="780" Fill="#FFE5E5E5"/>
            <TextBlock x:Name="fuldeNavnTextBlock" HorizontalAlignment="Center" Height="25" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="770" FontSize="16"/>
        </Grid>
    </Viewbox>
</Window>
