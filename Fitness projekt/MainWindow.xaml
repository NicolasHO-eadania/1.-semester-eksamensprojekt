<Window x:Class="Fitness_projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fitness_projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem x:Name="AktiviteterTabAdmin" Header="Aktiviteter">
                <Grid Background="#FFE5E5E5">
                    <Canvas x:Name="AktiviteterCanvas" Width="794" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <ListBox x:Name="AktiviteterListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Width="382" Height="356" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="AktiviteterListBox_SelectionChanged"/>
                        <Button x:Name="NyAktivitetButton" Content="Button" Width="382" Height="30" HorizontalAlignment="Left" Canvas.Top="366" VerticalAlignment="Center" Canvas.Left="10" Click="NyAktivitetButton_Click"/>
                        <Button x:Name="GemAktivitetButton" Content="Button" Height="30" Width="191" HorizontalAlignment="Left" Canvas.Left="593" Canvas.Top="366" VerticalAlignment="Center" Click="GemAktivitetButton_Click"/>
                        <Button x:Name="RedigerAktivitetButton" Content="Button" Height="30" Width="191" HorizontalAlignment="Left" Canvas.Left="402" Canvas.Top="366" VerticalAlignment="Center" Click="RedigerAktivitetButton_Click"/>
                        <TextBox x:Name="BeskrivelseTextBox" TextWrapping="Wrap" Text="TextBox" Width="382" HorizontalAlignment="Left" Height="330" Canvas.Left="402" Canvas.Top="36" VerticalAlignment="Center"/>
                        <TextBox x:Name="AktivitetTitelTextBox" Height="26" TextWrapping="Wrap" Text="TextBox" Width="262" HorizontalAlignment="Left" Canvas.Left="402" VerticalAlignment="Center" Canvas.Top="10"/>
                        <DatePicker x:Name="AktivitetDatoDatePicker" HorizontalAlignment="Left" Canvas.Left="664" VerticalAlignment="Top" Height="26" Width="120" Canvas.Top="10"/>
                    </Canvas>
                </Grid>
            </TabItem>
            <TabItem x:Name="MedlemmerTabAdmin" Header="Medlemmer">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
