<Window x:Class="Fitness_projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fitness" Height="450" Width="800">
  <Window.Resources>
    <!-- Template for how a Medlem's details are displayed on the right -->
    <DataTemplate DataType="{x:Type local:Medlem}" x:Key="MedlemDetailsTemplate">
      <StackPanel Margin="12" MaxWidth="500">
        <TextBlock FontSize="18" FontWeight="Bold" Text="{Binding Navn}" />
        <TextBlock Margin="4,8,0,0" Text="{Binding Email}" />
        <TextBlock Margin="4,2,0,0" Text="{Binding Medlemskab}" />
        <TextBlock Margin="4,12,0,0" Text="Notes:" FontWeight="SemiBold" />
        <TextBlock Text="{Binding Notes}" TextWrapping="Wrap" />
      </StackPanel>
    </DataTemplate>
  </Window.Resources>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="260" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- Left: selectable list -->
    <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0">
      <ListBox ItemsSource="{Binding Medlemmer}"
               SelectedItem="{Binding SelectedMedlem, Mode=TwoWay}"
               DisplayMemberPath="Navn"
               Margin="8"
               HorizontalContentAlignment="Stretch"
               VirtualizingPanel.IsVirtualizing="True"
               VirtualizingPanel.VirtualizationMode="Recycling" />
    </Border>

    <!-- Right: details for selected item -->
    <ContentControl Grid.Column="1"
                    Content="{Binding SelectedMedlem}"
                    ContentTemplate="{StaticResource MedlemDetailsTemplate}"
                    Margin="12" />
  </Grid>
</Window>